<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WithdrawFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/withdraw_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/imgView_phnIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_smartphone_black_24dp"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/withdrawPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgView_phnIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imgView_phnIcon"
                    android:background="@color/editTextBG"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/phnIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/ic_smartphone_black_24dp"
                android:tint="@color/white" />

            <EditText
                android:id="@+id/conWithdrawPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/phnIcon"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/phnIcon"
                android:background="@color/editTextBG"
                android:hint="Retype Phone number"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imgView_passwordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/img_authentication"
                android:tint="@color/white" />

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgView_passwordIcon"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imgView_passwordIcon"
                android:background="@color/editTextBG"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textSize="15sp" />

        </RelativeLayout>


        <RadioGroup
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/radioGroupPayment"
            android:layout_width="300dp"
            android:layout_height="200dp" >

                <RadioButton
                    android:id="@+id/radioBtnBkash"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="Bkash"
                    android:fontFamily="monospace"
                    android:drawableRight="@drawable/ic_bkash"/>

                <RadioButton
                    android:id="@+id/radioBtnRocket"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="Rocket"
                    android:fontFamily="monospace"
                    android:drawableRight="@drawable/ic_roket"/>

                <RadioButton
                    android:id="@+id/radioBtnRecharge"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="PayTm"
                    android:fontFamily="monospace"
                    android:drawableRight="@drawable/ic_paytm"/>

        </RadioGroup>

        <Button
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style_purple"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="submit"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/warningMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="#e70505"
                android:textSize="23sp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:text="withdraw text"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>