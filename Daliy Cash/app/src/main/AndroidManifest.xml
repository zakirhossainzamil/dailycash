<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dailypaymentapp.cashbox">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- These permissions are mandatory to run AppLovin SDK -->
    <!-- These permissions are strongly recommended and will result in higher performance -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/box1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/box1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">
        <activity android:name="com.dailypaymentapp.cashbox.Activities.SignUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.OrderPaymentActivity"
            android:label="@string/title_activity_order_payment"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.EarnMoneyActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.WithdrawHistoryActivity"
            android:label="@string/title_activity_withdrawhistory" />
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.ReferralActivity"
            android:label="Reffer" />
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.DashBoardActivity"
            android:label="Reffer" />
        <activity
            android:name="com.dailypaymentapp.cashbox.Activities.VpnConncetedActivity"
            android:label="VPN Detected" />
    </application>

</manifest>